%html
  %head
    %title Рекарио – Указатель
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}/
    %link{ rel: "stylesheet", href: "https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css", integrity: "sha512-NhSC1YmyruXifcj/KFRWoC561YpHpc5Jtzgvbuzx5VozKpWvQ+4nXhPdFgmx8xqexRcpAglTj9sIBWINXa8x5w==", crossorigin: "anonymous" }
    :css
      body { padding: 5%; font-family: Arial; background: #121212 }
      ul { padding: 0 }
      ul li { font-size: 16px; list-style: none; margin-bottom: 16px }
      button { width: 100%; padding: 8px; background: #8e44dd; border: none; border-radius: 4px; color: #fff; cursor: pointer }
      button:active { background: #5a11aa; }
      a { color: #fff; text-decoration: none; width: 100%; height: 100%; bacground: red }
      img { border-radius: 50%; text-align: center; box-shadow: 0 5px 25px 1px #555; width: 48; height: 48 }
  %body
    %center
      = link_to(root_path) do
        %img{src: '/images/logo-new.png'}/
    %br/
    %ul
      %li 
        = link_to(root_path) do
          %button О Рекарио
      %li
        = link_to('/android') do
          %button Play Store
      %li
        = link_to('/ios') do
          %button AppStore
      %li
        = link_to('https://www.instagram.com/recar.io/') do
          %button Наш Instagram
      %li
        = link_to('/news') do
          %button Новости в Telegram
      %li
        = link_to('/budget') do
          %button Найти авто по своему бюджету
      %li
        = link_to('https://github.com/recario/server/') do
          %button Разработчикам
